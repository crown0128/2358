<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:divider="?android:dividerHorizontal"
        android:dividerPadding="10dp"
        android:showDividers="middle"
        android:weightSum="50" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/ticker_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:text="1. TSLA"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:gravity="center_vertical"
            android:text="700$"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/price_buy_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:gravity="center_vertical"
            android:text="7000$"
            android:layout_weight="1"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lots_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:text="1 шт."
            android:layout_weight="1"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:layout_weight="1"
                android:id="@+id/lots_minus_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="1dp"
                android:padding="0dp"
                android:textSize="20dp"
                android:text="-" />

            <Button
                android:layout_weight="1"
                android:id="@+id/lots_plus_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="1dp"
                android:textSize="20dp"
                android:padding="0dp"
                android:text="+" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10.4"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/profit_percent_from_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="0.5%"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAlignment="center"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/profit_percent_to_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:gravity="center_vertical"
            android:text="2.0%"
            android:textSize="14sp"
            android:textAlignment="center"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8.8"
        android:orientation="horizontal">

        <Button
            android:layout_weight="2"
            android:id="@+id/price_minus_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:textSize="30dp"
            android:text="-" />

        <Button
            android:layout_weight="2"
            android:id="@+id/price_plus_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:textSize="30dp"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="11"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/choose_view"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>
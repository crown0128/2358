<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent">

    <SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="0dp"
        android:layout_alignParentTop="true"
        android:queryHint="Поиск $"
        android:iconifiedByDefault="false"/>

    <androidx.recyclerview.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="140dp"
        android:layout_marginTop="50dp"
        app:layoutManager="LinearLayoutManager"
        tools:context=".ui.premarket.PremarketFragment"
        tools:listitem="@layout/fragment_sector_item"
        android:paddingBottom="100dp"
        android:clipToPadding="false" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:weightSum="3" >

            <Button
                android:layout_height="50dp"
                android:id="@+id/sector1_button"
                android:layout_marginRight="5dp"
                android:text="HealthCare"
                android:layout_weight="1"
                android:padding="0dp"
                android:textSize="13dp"
                android:layout_width="0dp" />

            <Button
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:id="@+id/sector2_button"
                android:padding="0dp"
                android:text="Materials"
                android:layout_weight="1"
                android:textSize="13dp" />

            <Button
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:id="@+id/sector3_button"
                android:layout_marginLeft="5dp"
                android:padding="0dp"
                android:text="Industrials"
                android:layout_weight="1"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:weightSum="4" >

            <Button
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:id="@+id/sector4_button"
                android:layout_marginRight="5dp"
                android:padding="0dp"
                android:text="Consumer"
                android:layout_weight="1"
                android:textSize="13dp" />

            <Button
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:id="@+id/sector5_button"
                android:layout_marginRight="5dp"
                android:padding="0dp"
                android:text="IT"
                android:layout_weight="1"
                android:textSize="13dp" />

            <Button
                android:layout_height="50dp"
                android:id="@+id/sector6_button"
                android:layout_marginRight="5dp"
                android:text="Utilities"
                android:layout_weight="1"
                android:padding="0dp"
                android:textSize="13dp"
                android:layout_width="0dp" />

            <Button
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:id="@+id/sector7_button"
                android:padding="0dp"
                android:text="Financial"
                android:layout_weight="1"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:weightSum="4" >

            <Button
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:id="@+id/sector8_button"
                android:padding="0dp"
                android:text="RealEstate"
                android:layout_weight="1.3"
                android:textSize="13dp" />

            <Button
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:id="@+id/sector9_button"
                android:layout_marginLeft="5dp"
                android:padding="0dp"
                android:text="Telecom"
                android:layout_weight="0.9"
                android:textSize="13dp" />

            <Button
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:id="@+id/sector10_button"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="0dp"
                android:text="Energy"
                android:layout_weight="0.9"
                android:textSize="13dp" />

            <Button
                android:layout_height="50dp"
                android:id="@+id/sector11_button"
                android:text="Other"
                android:layout_weight="0.9"
                android:padding="0dp"
                android:textSize="13dp"
                android:layout_width="0dp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
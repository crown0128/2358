                        android:textColor="@color/white"
                        tools:ignore="RtlCompat" />
                    <TextView
                        android:layout_width="35dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent">

    <androidx.recyclerview.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="170dp"
        android:layout_marginTop="0dp"
        app:layoutManager="LinearLayoutManager"
        tools:context=".ui.strategyTazikEndless.StrategyTazikEndlessFinishFragment"
        tools:listitem="@layout/fragment_tazik_endless_finish_item" />

    <TextView
        android:id="@+id/info_text_view"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="70dp"
        android:text="Запуск таймера на покупку: \nВремя МСК: 2358: \nБумаг: 5\nСумма: ~1000$\nещё строка"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentBottom="true"
        android:weightSum="5" >

        <Button
            android:layout_height="80dp"
            android:id="@+id/start_later_button"
            android:layout_marginRight="5dp"
            android:text="@string/start_schedule"
            android:layout_weight="1.5"
            android:textSize="12dp"
            android:padding="0dp"
            android:layout_width="match_parent" />

        <Button
            android:layout_height="80dp"
            android:id="@+id/start_now_button"
            android:layout_marginRight="5dp"
            android:text="@string/start_now"
            android:layout_weight="1.5"
            android:textSize="12dp"
            android:padding="0dp"
            android:layout_width="match_parent" />

        <Button
            android:layout_height="80dp"
            android:id="@+id/status_button"
            android:text="📝"
            android:layout_weight="2"
            android:textSize="14dp"
            android:padding="0dp"
            android:layout_width="match_parent" />

    </LinearLayout>

</RelativeLayout>
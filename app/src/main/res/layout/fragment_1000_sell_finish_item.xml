<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:divider="?android:dividerHorizontal"
    android:dividerPadding="10dp"
    android:showDividers="middle"
    android:weightSum="50.7"
    android:paddingStart="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9.4"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/ticker_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:text="1. TSLA"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="4dp"
            android:gravity="center_vertical"
            android:text="avg. 700$"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/price_total_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="4dp"
            android:gravity="center_vertical"
            android:text="7000$"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10.6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lots_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:text="123 шт."
            android:textSize="11sp"
            android:textStyle="bold"
            android:textAlignment="center"
            tools:ignore="RtlCompat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:layout_weight="1"
                android:id="@+id/lots_minus_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="1dp"
                android:padding="0dp"
                android:textSize="20dp"
                android:text="-" />

            <Button
                android:layout_weight="1"
                android:id="@+id/lots_plus_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="1dp"
                android:textSize="20dp"
                android:padding="0dp"
                android:text="+" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10.8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/percent_profit_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:text="+0.5%"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price_profit_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:gravity="center_vertical"
            android:text="710$"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/price_profit_total_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:gravity="center_vertical"
            android:text="7100$"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10.8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/percent_profit_future_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:text="+1.0%"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price_profit_future_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:gravity="center_vertical"
            android:text="+10$"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/percent_profit_future_total_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:gravity="center_vertical"
            android:text="+100$"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9.1"
        android:orientation="horizontal">

        <Button
            android:layout_weight="2"
            android:id="@+id/percent_minus_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:textSize="30dp"
            android:text="-" />

        <Button
            android:layout_weight="2"
            android:id="@+id/percent_plus_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:textSize="30dp"
            android:text="+" />
    </LinearLayout>

</LinearLayout>